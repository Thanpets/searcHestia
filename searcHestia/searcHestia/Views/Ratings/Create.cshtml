@model searcHestia.Models.Rating

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Star Rating</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @{
            List<searcHestia.ViewModels.SelectedCategoriesStars> categories = ViewBag.RatCategories;

            foreach (var category in categories)
            {
                var fName = "group" + @category.CategoryID;
                <div class="form-group">
                    @Html.Label(category.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        <span class="star-cb-grouppp">
                            <input type="radio" id="@{@fName} " name="@{@fName}" value="1"
                                   @(Html.Raw(category.Picked ? "checked=\"checked\"" : "")) />
                            <label for="@{@fName}">1</label>

                            <input type="radio" id="@{@fName} " name="@{@fName}" value="2"
                                   @(Html.Raw(category.Picked ? "checked=\"checked\"" : "")) />
                            <label for="@{@fName}">2</label>

                            <input type="radio" id="@{@fName} " name="@{@fName}" value="3"
                                   @(Html.Raw(category.Picked ? "checked=\"checked\"" : "")) />
                            <label for="@{@fName}">3</label>

                            <input type="radio" id="@{@fName} " name="@{@fName}" value="4"
                                   @(Html.Raw(category.Picked ? "checked=\"checked\"" : "")) />
                            <label for="@{@fName}">4</label>

                            <input type="radio" id="@{@fName} " name="@{@fName}" value="5" checked="checked"
                                   @(Html.Raw(category.Picked ? "checked=\"checked\"" : "")) />
                            <label for="@{@fName}">5</label>

                        </span>
                    </div>
                </div>
            }
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", null, null, null, new { href = Request.UrlReferrer })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        var logID = 'log',
            log = $('<div id="' + logID + '"></div>');
        $('body').append(log);
        $("input[type='radio']").change(function () {
            var me = $(this);
            log.html(me.attr('value'));
        });


    </script>
}