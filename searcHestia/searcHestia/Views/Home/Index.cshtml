@model searcHestia.ViewModels.RSearchViewModel

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Search", "Home"))
{
    @Html.AntiForgeryToken()

    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="8000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="panel panel-primary panel-transparent carousel-content">
                <div class="panel-body">
                    <h3>Book unique homes</h3>
                    <div class="form-group">
                        <label>Where</label>
                        @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control search-input", placeholder = "Enter City or Region" } })
                        @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                    </div>
                    <div class="row form-inline">
                        <div class="form-group col-md-6">
                            <label>Arrival</label>
                            @Html.EditorFor(model => model.Arrival, new { htmlAttributes = new { @class = "form-control search-input", @id="arrival" } })
                            @Html.ValidationMessageFor(model => model.Arrival, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Departure</label>
                            @Html.EditorFor(model => model.Departure, new { htmlAttributes = new { @class = "form-control search-input", @id="departure" } })
                            @Html.ValidationMessageFor(model => model.Departure, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Guests</label>
                        @Html.EditorFor(model => model.Occupants, new { htmlAttributes = new { @class = "form-control search-input", placeholder = "Number of guests" } })
                        @Html.ValidationMessageFor(model => model.Occupants, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning pull-right">
                            Search
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="item active">
                <img src="https://odis.homeaway.com/odis/homepage/644873f3-544d-4bfb-b19b-a673308b7373.hw1.jpg" alt="Package Management" class="img-responsive carousel-img" />
                <div class="carousel-caption" role="option">
                    <p>
                        Book unique homes and experiences.
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="https://cdn-images-1.medium.com/max/1600/1*CsDgB2D8KIetB_e37t3n_A.jpeg" alt="ASP.NET" class="img-responsive carousel-img" />
            </div>
            <div class="item">
                <img src="https://cdn.hipwallpaper.com/i/20/78/twrmgp.jpg" alt="ASP.NET" class="img-responsive carousel-img" />
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="sr-only">Next</span>
        </a>
    </div>

}


