@model searcHestia.ViewModels.RSearchViewModel

@{
    ViewBag.Title = "Home Page";
}

@section Styles
    {
    <style>
        .jumbotron {
            background-image: url('https://parsonsvillas.com/wp-content/uploads/2017/07/bannerVideo6.png');
            background-size: cover;
            -webkit-box-shadow: none;
            box-shadow: none;
            border: 0px;
            border-radius: 0;
        }

        .panel-transparent {
            background: none;
            width: 310px;
        }

            .panel-transparent .panel-body {
                background: rgba(224, 224, 224, 0.50) !important;
            }

        input {
            background-color: #ffffff !important;
        }

            input[type=text], [type=date], [type=number] {
                border: 1px solid #2d3e7a;
                height: 42px;
            }
    </style>
}


@using (Html.BeginForm("Search", "Home"))
{
    @Html.AntiForgeryToken()

    <div class="jumbotron">

        <div class="container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="panel panel-primary panel-transparent">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter City or Region" } })
                        @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Arrival, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Arrival, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Departure, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Departure, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Occupants, new { htmlAttributes = new { @class = "form-control", placeholder = "Number of guests" } })
                        @Html.ValidationMessageFor(model => model.Occupants, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-warning">Search
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
}


