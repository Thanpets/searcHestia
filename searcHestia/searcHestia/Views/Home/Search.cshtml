@model IEnumerable<searcHestia.Models.VacProperty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Find your Vacation Property</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Search</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xs-6 col-md-3">
                    <a href="@Url.Action("Details", "VacProperties", new { id = item.Id })" class="thumbnail">
                        <img src="https://images.unsplash.com/photo-1475855581690-80accde3ae2b" alt="Pic">
                    </a>
                    <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                    @Html.DisplayFor(modelItem => item.Location.City.Name)
                    @Html.DisplayFor(modelItem => item.VPType)
                    @Html.DisplayFor(modelItem => item.PricePN) €
                </div>
            }
        </div>
    </div>
    <div class="panel-footer">Panel footer</div>
</div>
